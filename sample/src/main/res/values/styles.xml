<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.AppCompat" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Toolbar.AppCompat" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorControlHighlight">@color/white_highlight</item>

    </style>

    <style name="Toolbar.Popup.AppCompat" parent="Theme.AppCompat.Light">

    </style>

</resources>
