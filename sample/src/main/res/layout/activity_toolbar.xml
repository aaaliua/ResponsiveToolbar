<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.ResponsiveToolbar
        android:id="@+id/toolbar_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:elevation="6dp"
        android:background="@color/colorPrimary"
        app:navigationIcon="@drawable/ic_menu_white_24dp"
        app:theme="@style/Toolbar.AppCompat"
        app:popupTheme="@style/Toolbar.Popup.AppCompat" />

    <android.support.v7.widget.ResponsiveToolbar
        android:id="@+id/toolbar_2"
        android:paddingStart="@dimen/toolbar_h_padding"
        android:paddingEnd="@dimen/toolbar_h_padding"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="16dp"
        android:elevation="6dp"
        android:background="@color/colorPrimary"
        app:theme="@style/Toolbar.AppCompat"
        app:popupTheme="@style/Toolbar.Popup.AppCompat"
        tools:ignore="NewApi" />

    <android.support.v7.widget.ResponsiveToolbar
        android:id="@+id/toolbar_3"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="16dp"
        android:elevation="6dp"
        android:background="@color/colorPrimary"
        app:theme="@style/Toolbar.AppCompat"
        app:popupTheme="@style/Toolbar.Popup.AppCompat" />

    <android.support.v7.widget.ResponsiveToolbar
        android:id="@+id/toolbar_4"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="16dp"
        android:elevation="6dp"
        android:background="@color/colorPrimary"
        app:theme="@style/Toolbar.AppCompat"
        app:popupTheme="@style/Toolbar.Popup.AppCompat"/>

</LinearLayout>